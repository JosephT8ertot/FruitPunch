#:kivy 1.0.9
WindowManager:
    Home:
    Login:
    CreateUser:
    Dashboard:
    Group:
    AdminGroup:
    BeerPong:
    Snappa:
    BeerPongTournament:
    SnappaTournament:
    BeerPongLeague:
    SnappaLeague:
    Team:

<Home>:
    name: 'home'
    canvas:
        Color:
            rgba: rgba("6E6E6E")
        Rectangle:
            size: root.size
    Button:
        text: 'Login'
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, 10
        on_press: root.manager.current = 'login'
    Button:
        text: 'Create User'
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, root.height * 0.1 + 20
        on_press: root.manager.current = 'create_user'

<Login>:
    name: 'login'
    canvas:
        Color:
            rgba: rgba("6E6E6E")
        Rectangle:
            size: root.size
    Button:
        text: 'Dashboard'
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, 10
        on_press: root.manager.current = 'dashboard'
    Button:
        text: 'Back'
        size_hint: 0.15, 0.1
        pos: 10, root.height * 0.9 - 10
        on_press: root.manager.current = 'home'

