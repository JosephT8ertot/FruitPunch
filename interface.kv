        size_hint: 0.15, 0.1
        pos: root.width * 0.425, root.height * 0.9 - 10
    Button:
        text: 'Play'
        size_hint: 0.15, 0.1
        pos: root.width * 0.1, root.height * 0.3 + 40
    Button:
        text: 'Groups'
        size_hint: 0.15, 0.1
        pos: root.width * 0.1, root.height * 0.2 + 30
    Button:
        text: 'Friends'
        size_hint: 0.15, 0.1
        pos: root.width * 0.1, root.height * 0.1 + 20
    Button:
        text: 'Stats'
        size_hint: 0.15, 0.1
        pos: root.width * 0.1, 10
    Button:
        text: 'Group'
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, 10
        on_press: root.manager.current = 'group'
    Button:
        text: 'Admin Group'
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, root.height * 0.1 + 20
        on_press: root.manager.current = 'admin_group'
