#:kivy 1.0.9

<Home>:
    name: 'home'
    canvas.before:
        Color:
            rgba: rgba("6E6E6E")
        Rectangle:
            size: root.size
    Button:
        text: 'Login'
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, 10
        on_press: root.manager.current = 'login'
    Button:
        text: 'Create User'
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, root.height * 0.1 + 20
        on_press: root.manager.current = 'create_user'

<Login>:
    name: 'login'
    canvas:
        Color:
            rgba: rgba("6E6E6E")
        Rectangle:
            size: root.size
    TextInput:
        id: username
        multiline: 0
        hint_text: 'Username/Email'
        size_hint: 0.2, 0.05
        pos: root.width * 0.4, root.height * 0.95 - 10
    TextInput:
        id: password
        multiline: 0
        hint_text: 'Enter Password'
        size_hint: 0.2, 0.05
        pos: root.width * 0.4, root.height * 0.9 - 20
    Label:
        text: 'Keep me logged in'
        size_hint: 0.15, 0.05
        pos: root.width * 0.4, root.height * 0.85 - 30
    CheckBox:
        id: stay_logged
        size_hint: 0.1, 0.1
        pos: root.width * 0.535, root.height * 0.825 - 30
    Button:
        text: 'Dashboard'
        id: dashboard
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, 10
        on_press:
            app.getUser(root.ids.username.text, root.ids.password.text, root.ids.stay_logged.state)
            root.manager.current = 'dashboard'
    Button:
        text: 'Back'
        size_hint: 0.15, 0.1
        pos: 10, root.height * 0.9 - 10
        on_press: root.manager.current = 'home'

<CreateUser>:
    name: 'create_user'
    canvas:
        Color:
            rgba: rgba("6E6E6E")
        Rectangle:
            size: root.size
    TextInput:
        id: username
        multiline: 0
        hint_text: 'Enter Username'
        size_hint: 0.2, 0.05
        pos: root.width * 0.4, root.height * 0.95 - 10
    TextInput:
        id: Email
        multiline: 0
        hint_text: 'Enter Email'
        size_hint: 0.2, 0.05
        pos: root.width * 0.4, root.height * 0.9 - 20
    TextInput:
        id: password
        multiline: 0
        hint_text: 'Enter Password'
        size_hint: 0.2, 0.05
        pos: root.width * 0.4, root.height * 0.85 - 30
    CheckBox:
        id: stay_logged
        size_hint: 0.1, 0.1
        pos: root.width * 0.535, root.height * 0.775 - 40
    Label:
        text: 'Keep me logged in'
        size_hint: 0.15, 0.05
        pos: root.width * 0.4, root.height * 0.8 - 40
    Button:
        text: 'Dashboard'
        size_hint: 0.15, 0.1
        pos: root.width * 0.425, 10
        on_press:
            app.createUser(root.ids.username.text, root.ids.password.text, root.ids.stay_logged.state)
            root.manager.current = 'dashboard'
    Button:
        text: 'Back'
        size_hint: 0.15, 0.1
        pos: 10, root.height * 0.9 - 10
        on_press: root.manager.current = 'home'

<Dashboard>:
    name: 'dashboard'
    canvas:
        Color:
            rgba: rgba("6E6E6E")
